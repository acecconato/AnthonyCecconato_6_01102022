<div>
    {{ form_start(form, {attr: {autocomplete: 'off'}}) }}

    <p class="text-muted">Après avoir renseigné votre adresse email, vous recevrez un mail vous permettant de
        réinitialiser votre mot de passe</p>

    <div class="form-group mb-4">
        {{ form_label(form.email, 'Adresse email') }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="d-flex gap-3 flex-column justify-content-center align-items-center">
        <button class="btn btn-primary rounded-0" type="submit">Valider</button>
        <a href="{{ path('security_login') }}">Retourner à la page de connexion</a>
    </div>

    {{ form_end(form) }}
</div>
