<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3 item">
    <div class="card">
        <a href="{{ path('app_show_trick', {slug: trick.slug}) }}" class="text-reset text-decoration-none">
            <img src="{{ asset('uploads/cover/' ~ trick.coverWebPath) }}" class="card-img-top"
                 alt="Illustration de la figure « {{ trick.name }} »">
            <div class="card-body">
                <div class="card-title">{{ trick.name }}</div>
                <p class="card-text">{{ trick.description|u.truncate(30, '...') }}</p>

                {% if (is_granted('ROLE_USER')) %}
                    <div class="mt-3">
                        <a href="{{ path('app_trick_update', {slug: trick.slug}) }}" class="btn btn-primary"
                           title="Modifier">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <a href="{{ path('app_trick_delete', {slug: trick.slug}) }}"
                           class="btn btn-danger btn-delete"
                           title="Supprimer"
                        >
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                {% endif %}
            </div>
        </a>
    </div>
</div>
